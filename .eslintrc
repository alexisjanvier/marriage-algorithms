{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "plugins": ["prettier", "import" ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "all",
                "printWidth": 100
            }
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "one-var": [
            "error",
            "never"
        ],
        "no-prototype-builtins": "off"
    }
}
